<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Version>1.2.0</Version>
    <Description>Generate Avro Schema</Description>
    <PackageProjectUrl>https://github.com/eaba/SchemaGenerator</PackageProjectUrl>
    <RepositoryUrl>https://github.com/eaba/SchemaGenerator</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageId>AvroSchemaGenerator</PackageId>
    <PackageReleaseNotes>Fixes to array and map name issues
Handle Required and Default Attribute</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.ComponentModel.Annotations" Version="4.7.0" />
    <PackageReference Include="System.Text.Json" Version="4.7.1" />
  </ItemGroup>

</Project>
